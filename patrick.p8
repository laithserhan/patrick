function _init()
  colors={
    {15,flr(rnd(27))+1},
    {9,flr(rnd(27))+1},
    {8,flr(rnd(27))+1},
    {11,flr(rnd(27))+1},
    {1,flr(rnd(27))+1},
    {12,flr(rnd(27))+1},
    {10,flr(rnd(27))+1}
  }
  board={}
  local location=0
  for y=1,4 do
    add(board,{})
    for x=1,7 do
      location+=1
      add(board[y],0)
      for ball in all(colors) do
        if (location==ball[2]) board[y][x]=ball[1] break
      end
    end
  end
end

function _draw()
  cls()
  for y=1,4 do
    for x=1,7 do
      rect(18*(x-1),18*(y-1),18*(x),18*(y),7)
      if board[y][x]==15 then
        spr(1,(18*(x-1))+2,(18*(y-1))+2,2,2)
      elseif board[y][x]!=0 then
        circfill(18*(x-1)+9,18*(y-1)+9,4,board[y][x])
      end
    end
  end
end

